{
  "name": "barebones-node",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^8.11.1"
  },
  "scripts": {
    "start": "npm run build && node ./start.js",
    "dev": "npm run build && npm run watch",
    "build": "browserify -t [ browserify-css --output ./public/style.css ] ./src/js/main.js -o public/bundle.js",
    "watch": "nodemon ./start.js"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-geocoder": "^2.2.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.8",
    "express": "^4.16.3",
    "mapbox-gl": "^0.44.2",
    "moment": "^2.22.0",
    "mongoose": "^4.13.12"
  },
  "devDependencies": {
    "browserify": "^16.2.0",
    "browserify-css": "^0.14.0",
    "nodemon": "^1.17.3",
    "watchify": "^3.11.0"
  }
}
